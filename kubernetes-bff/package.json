{
  "name": "kubernetes-bff",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start:dev": "yarn copy-files && NODE_ENV=local nest start --watch",
    "start:test": "yarn copy-files && NODE_ENV=test nest start --watch",
    "prebuild": "rimraf dist && yarn copy-files",
    "build": "yarn copy-files && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=local nest start",
    "start:debug": "NODE_ENV=local nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=local jest",
    "test:ci": "NODE_ENV=local jest --cacheDirectory=/etc/ci_cache/jest_cache/kubernetes-bff",
    "test:watch": "NODE_ENV=local jest --watch",
    "test:cov": "NODE_ENV=local jest --coverage",
    "test:debug": "NODE_ENV=local node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "yarn build && NODE_ENV=ci NODE_PATH=./src  jest --config ./jest-e2e.json --detectOpenHandles",
    "check-type": "tsc --noEmit",
    "lint-staged": "lint-staged",
    "copy-files": "copyfiles ./config/*.yaml dist",
    "cypress:open": "cypress open",
    "cypress:all": "cypress run --spec \"cypress/api/**/*.spec.ts\"",
    "cypress:p1": "cypress run --spec \"cypress/api/**/*.p1.spec.ts\"",
    "cypress:p2": "cypress run --spec \"cypress/api/**/*.p2.spec.ts\""
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.10.0",
    "@kubernetes/client-node": "^0.13.2",
    "@medibloc/nestjs-request-context": "^1.0.0",
    "@nestjs/common": "^7.5.1",
    "@nestjs/config": "^0.6.1",
    "@nestjs/core": "^7.5.1",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/platform-ws": "^7.6.15",
    "@nestjs/swagger": "^4.7.5",
    "@nestjs/throttler": "^2.0.1",
    "@nestjs/websockets": "^7.6.15",
    "@zeno/agent-profiler": "^1.1.1",
    "axios": "^0.21.0",
    "bluebird": "^3.7.2",
    "byline": "^5.0.0",
    "cache-manager": "^3.4.3",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cookie-parser": "^1.4.5",
    "elastic-apm-node": "^3.16.0",
    "express-ws": "^4.0.0",
    "faker": "^5.5.3",
    "heapdump": "^0.3.15",
    "js-yaml": "^3.14.0",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "moment": "^2.29.1",
    "nodemailer": "^6.4.17",
    "p-limit": "^3.1.0",
    "p-queue": "^6.6.2",
    "path-match": "^1.2.4",
    "prom-client": "^13.0.0",
    "ramda": "^0.27.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.5",
    "uuid": "^8.3.2",
    "winston": "^3.6.0",
    "winston-daily-rotate-file": "^4.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.3",
    "@nestjs/testing": "^7.5.1",
    "@types/cache-manager": "^3.4.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/elasticsearch": "^5.0.36",
    "@types/express": "^4.17.8",
    "@types/faker": "^5.5.7",
    "@types/heapdump": "^0.3.1",
    "@types/jest": "^26.0.15",
    "@types/js-yaml": "^3.12.5",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.14.6",
    "@types/ramda": "^0.27.44",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "conventional-changelog-conventionalcommits": "^4.5.0",
    "copyfiles": "^2.4.1",
    "cypress": "^6.2.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "4.3.0",
    "jest": "^26.6.3",
    "jest-environment-node": "^26.6.2",
    "jest-html-reporter": "^3.3.0",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.5.2",
    "lodash": "^4.17.20",
    "mustache": "^4.1.0",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn check-type && lint-staged && yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
