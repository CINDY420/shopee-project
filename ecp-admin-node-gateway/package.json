{
  "name": "ecp-admin-node-gateway",
  "version": "0.1.0",
  "description": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "commit": "commit",
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "NODE_ENV=local nest start",
    "start:dev": "NODE_ENV=local nest start --watch",
    "start:debug": "NODE_ENV=local nest start --debug --watch",
    "dev": "NODE_ENV=local nest start --watch",
    "dev:mock": "NODE_ENV=local DATA_SOURCE=mock nest start --watch",
    "start:prod": "NODE_ENV=$ENV node dist/main",
    "lint": "npx eslint --fix --quiet './src/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "precommit": "lint-staged",
    "check-type": "tsc --noEmit",
    "update-node-kit": "yarn add @infra-node-kit/config @infra-node-kit/context @infra-node-kit/core @infra-node-kit/exception @infra-node-kit/http @infra-node-kit/interceptors @infra-node-kit/logger @infra-node-kit/middlewares @infra-node-kit/prometheus",
    "update-rapper": "zx update-rapper-api.mjs",
    "update-tap": "node swagger-tap.mjs",
    "update-tap-ecp-admin": "serviceName=ecp-admin-apis node swagger-tap.mjs"
  },
  "dependencies": {
    "@infra-node-kit/config": "^0.6.0",
    "@infra-node-kit/context": "^0.3.0",
    "@infra-node-kit/core": "^2.0.1",
    "@infra-node-kit/exception": "^0.2.3",
    "@infra-node-kit/http": "^0.5.2",
    "@infra-node-kit/interceptors": "^1.3.0",
    "@infra-node-kit/logger": "^0.3.2",
    "@infra-node-kit/middlewares": "^0.4.1",
    "@infra-node-kit/prometheus-nest": "^2.1.0",
    "@infra/rapper": "2.1.14",
    "@infra/utils": "1.1.2-alpha.2",
    "@medibloc/nestjs-request-context": "^1.0.0",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.0.3",
    "@nestjs/core": "^8.0.0",
    "@nestjs/mapped-types": "^1.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.2.1",
    "@zeno/agent-profiler": "^1.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@commitlint/prompt-cli": "^15.0.0",
    "@infra-web-kit/eslint-config-infra-typescript": "^1.5.0",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@tap/core": "^0.4.9",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-testing-library": "^3.9.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "got": "^11.8.5",
    "husky": "^7.0.4",
    "jest": "^27.0.6",
    "lint-staged": "^12.1.2",
    "prettier": "^2.7.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.7.4",
    "zx": "^7.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "testPathIgnorePatterns": [
      ".*\\.e2e.spec.ts$"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/$1"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --quiet --fix"
    ]
  }
}
